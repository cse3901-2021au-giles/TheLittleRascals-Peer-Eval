<%# This file is for editing the user. This is accessible through the main
page the users enter through after they've been logged in correctly. From here,
the users can change their first name, last name, email, and password. %>

<%= javascript_pack_tag 'custom', 'data-turbolinks-track': 'reload'%>
<% if notice%>
    <p class="notice flex center"><%= notice %> </p>
<%end%>
<div class=" header v-center space-between flex padding-show">
    <div class="flex">
        <div class="font-all ">
            Edit Profile
        </div>

    </div>

</div>
<div class="padding top-space font-all-2">
<% if @user_info.temp_user%>
    <div class="red bottom-space-sss">Your instructors have already created an account for you, please update your password to activate your account.</div>
<%end %>

<div class="red">Password must contain an uppercase letter, a symbol, a number and be 8 in length.</div>
<%= form_for @user do |f| %>
    <%= f.label :First_Name %>
    <br>
    <%= f.text_field :fname, value:@user_info.fname, :required =>  true%>
    <br>
    <%= f.label :Last_Name %>
    <br >
    <%= f.text_field :lname, value:@user_info.lname, :required =>  true%>
    <br>
    <%= f.label :Email %>
    <br>
    <%= f.text_field :email, value:@user_info.email, :required =>  true%>
    <br>
    <%= f.label :Password %>
    <br>
    <%= f.password_field :password, :required =>  true%>
    <br>
    <%= f.submit "Save Changes", class: "btn btn-all top-space" %>

    <% end %>
</div>