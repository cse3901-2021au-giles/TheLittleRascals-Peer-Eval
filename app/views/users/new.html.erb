<%# This page is for creating a new user. On the /login page, a user is able to
click "Sign Up" to create a new account. Here, the user inputs their first
name, last name, email, password, and group name. %>

<%= javascript_pack_tag 'custom', 'data-turbolinks-track': 'reload'%>
<% if @error%>
    <p class="error-msg flex center" ><%= @error %> </p>
<%end%>
<% if notice%>
    <p class="notice flex center"><%= notice %> </p>
<%end%>

<div class=" header v-center space-between flex padding-show">
    <div class="flex">
        <div class="font-all ">
            Create A New User
        </div>

    </div>
</div>

<div class="padding font-all-2 top-space">
<div class="red">Password must contain an uppercase letter, a symbol, a number and be 8 in length.</div>

<% if @is_temp_user %>
<%= form_for @user do |f| %>
    <%= f.label :First_Name %>
    <br>
    <%= f.text_field :fname, :required =>  true%>
    <br>
    <%= f.label :Last_Name %>
    <br>
    <%= f.text_field :lname, :required =>  true%>
    <br>
    <%= f.label :email %>
    <br>
    <%= f.text_field :email, :required =>  true%>
    <br>
    <div class="none">
    <%= f.label :password %>
    <br>
    <%= f.password_field :password, :required =>  true%>
    <br>
    </div>
    <%= f.label :admin %>
    <%= f.check_box :admin%>
    <br>
    <%= hidden_field_tag(:temp_user, '')%>
    <%= hidden_field_tag(:group_id, @group_id)%>
    <%= f.submit "Create Account", class: "btn btn-all top-space" %>

<% end %>

<% else%>
<%= form_for @user do |f| %>
    <%= f.label :fname %>
    <br>
    <%= f.text_field :fname, :required =>  true%>
    <br>
    <%= f.label :lname %>
    <br>
    <%= f.text_field :lname, :required =>  true%>
    <br>
    <%= f.label :email %>
    <br>
    <%= f.text_field :email, :required =>  true%>
    <br>
    <%= f.label :password %>
    <br>
    <%= f.password_field :password, :required =>  true%>
    <br>
    <div class="none">
    <%= f.label :admin %>
    <%= f.check_box :admin, checked: true%>
    </div>
    <%= label_tag :group_name%>
    <br>
    <%= text_field_tag 'group', value = nil, :required => true%>
    <br>
    <%= f.submit "Create Account", class: "btn btn-all top-space" %>

<% end %>

<% end %>

</div>